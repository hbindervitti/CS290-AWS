<script language="javascript" type="text/javascript" >
console.log('in global');

document.addEventListener('DOMContentLoaded', function(){
	var req = new XMLHttpRequest();
		
	req.onreadystatechange = function(){
		if(req.readystate == 4 && req.status == 200){
			document.getElementById('stuff').innerHTML = req.responseText;
		}else{
			document.getElementById('stuff').innerHTML = 'waiting';
		}
	}

	req.open("GET", "http://52.27.157.90:3000/", true);
	req.send();
	
});

</script>

<h1>Exercise Database</h1>
<p>{{debugString}}</p>
<div id="stuff"></div>


<form id="newExercise">
  <fieldset>
	<legend>Add an exercise</legend>
	<legend>Exercise Name</legend>
	<input type="text" name="name" id="name">
	
	<legend>Repetitions</legend>
	<input type="number" name="reps" id="reps">
	
	<legend>Weight</legend>
	<input type="number" name="weight" id="weight">
	
	<legend>Date</legend>
	<input type="date" name="date" id="date">
	
	<legend>Unit</legend>
	<input type="radio" id="lbs" name = "lbs" value="1">lbs
	<input type="radio" id="lbs" name = "lbs" value="0">kgs
	
	<p><input type="submit" id="insert" value="Add Exercise">
  </fieldset>
</form>


<table>
	<tr>
		<th>Name</th>
		<th>Reps</th>
		<th>Weight</th>
		<th>Date</th>
		<th>Lbs</th>
	</tr>
	 {{#each results}}
	<tr>
		<td>{{this.name}}</td>
		<td>{{this.reps}}</td>
		<td>{{this.weight}}</td>
		<td>{{this.date}}</td>
		<td>{{this.lbs}}</td>
	</tr>
	 {{/each}}
</table>


